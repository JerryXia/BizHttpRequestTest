<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <mvc:interceptors>
    <mvc:interceptor>
      <mvc:mapping path="/**" />
      <bean class="org.anonymous.devhelper.web.interceptor.RequestIdInitInterceptor">
        <property name="responseHeaderName" value="" />
      </bean>
    </mvc:interceptor>
    <mvc:interceptor>
      <mvc:mapping path="/**" />
      <bean class="org.anonymous.devhelper.web.interceptor.RequestResponseLogInterceptor">
        <property name="enable" value="true" />
        <property name="logRequestHeaderNames">
          <list>
            <!-- 请求的应用系统类型：ios、android 用于服务器端跟踪请求统计 -->
            <value>X-Call-Os</value>
            <!-- API版本号，目前所有API仅支持版本号『1』，可以不设置此请求头，默认版本号为『1』用于将来版本升级时接口无法无缝兼容时作的处理，以及统计 -->
            <value>X-Call-Version</value>
            <value>X-Call-Sign</value>
          </list>
        </property>
      </bean>
    </mvc:interceptor>
  </mvc:interceptors>

</beans>
